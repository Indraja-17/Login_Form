<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_9"
    tools:context=".RegistrationPage">
    <EditText
        android:id="@+id/name_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:inputType="textPersonName"

        />
    <EditText
        android:id="@+id/dob_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
        android:layout_below="@id/name_r"
        android:textStyle="bold"
        android:hint="MM/DD/YYYY"
        android:inputType="date"
        />
    <EditText
        android:id="@+id/phone_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dob_r"
        android:hint="Contact Number"
        android:textStyle="bold"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/email_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phone_r"
        android:textStyle="bold"
        android:hint="Email Address"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/qualification_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/email_r"
        android:hint="Qualification"
        android:inputType="text"
        />
    <EditText
        android:id="@+id/address_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/qualification_r"
        android:hint="Address"
        android:textStyle="bold"
        android:inputType="text"
        />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_r"
        android:layout_alignParentEnd="true"
        android:text="Submit" />

</RelativeLayout>